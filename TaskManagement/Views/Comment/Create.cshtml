@model TaskManagement.Models.Comment

@{
    ViewBag.Title = "Create";
}

<h2>Create Message</h2>
<form method="post" action="/Comment/Create" enctype="multipart/form-data">
    @Html.HiddenFor(m => m.AuthorId)
    @Html.HiddenFor(m => m.TaskId)
    @Html.Label("Message", "Message")
    <br /> @Html.TextBox("Message", null, new { @class = "form-control" })
    <button class="btn btn-primary" type="submit">&#x1f44a;Add Comment</button>

</form>

